class Solution:
    def maxSubArray(self, nums):
        # Initialize current sum as 0
        current_sum = 0
        # Initialize max sum to the smallest possible value
        max_sum = nums[0]

        # Initialize for loop to check through whole array
        for num in nums:
            # Add current number to the running sum
            current_sum += num
            # Update max sum to current sum
            if current_sum > max_sum:
                max_sum = current_sum

            # If current_sum becomes negative, reset it to 0
            # because negative sum will only reduce future sums

            if current_sum < 0:
                current_sum = 0
        
        return max_sum
